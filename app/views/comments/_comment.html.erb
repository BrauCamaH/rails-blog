<% unless comment.archived? %>
  <div class="card mb-3 mt-3">
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>

    <p>
      <%=
        link_to "Delete", [comment.article, comment], data: ({
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        }) , class: "button is-danger mb-4 mt-2"
      %>
    </p>
  </div>
<% end%>
